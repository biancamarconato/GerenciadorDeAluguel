<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
    .menubtn{
        margin-left: 160px;
    }
</style>
<script>
    function apagar(){
        
        alert("Pagamento apagado com sucesso!")
    }
</script>

<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-info">
            <a href="/inq" class="btn btn-secondary menubtn">Inquilinos</a>

            <a href="/infoinq" class="btn btn-secondary menubtn">Informações de Inquilino</a>

            <a href="/pag" class="btn btn-secondary menubtn">Pagamentos</a>

            <a href="/infopag" class="btn btn-success menubtn">Informações Pagamentos</a>
        </div>
    </div>
</div>

{{#each pagamentos}}
<div class="row">
        <div class="col-md-12">
            <div class="form-group">
                 <div class="card center">
                    <table>
                        <tr>
                            <thead>
                                <th>Ordem:</th>
                                <th>Data de pagamento estabelecida:</th>
                                <th>Data de pagamento realizada:</th>
                                <th>Valor:</th>
                            </thead>
                        </tr>
                        <tr>
                            <tbody>
                                <td>{{dataValues.id}}</td>
                                <td>{{#formatDate dataValues.estabelecida}} {{/formatDate}}</td>
                                <td>{{#formatDate dataValues.dataPagamento}} {{/formatDate}}</td>
                                <td>{{dataValues.Valor}}</td>
                                <td><a href="/apagar/{{dataValues.id}}" onclick="apagar()" class="btn btn-danger">Apagar</a></td>
                            </tbody>
                        </tr>
                    </table>
            </div>
        </div>
    </div>
</div>
{{/each}}